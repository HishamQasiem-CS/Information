@model IEnumerable<InformationUser>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <a asp-action="AddNewUser" asp-controller="Home" class="btn btn-primary">
        Add User
    </a>
    <br/>
<table class="table" style="text-align:center;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.FullName)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.Email)</th>
            <th scope="col">@Html.DisplayNameFor(x=>x.Registration)</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>@item.InformationUserId</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Registration</td>
                <td>
                    <a asp-action="DetailsUser" asp-controller="Home" asp-route-id="@item.InformationUserId" class="btn btn-danger">Details </a>

                    <a asp-action="UpdateUser" asp-controller="Home" asp-route-id="@item.InformationUserId" class="btn btn-primary">Update</a>

                    <a asp-action="DeleteUser" asp-controller="Home" asp-route-id="@item.InformationUserId" class="btn btn-success">Delete </a>
                </td>
               
            </tr>
        }
       
       
    </tbody>
</table>

