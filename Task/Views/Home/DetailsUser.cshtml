@model InformationUser
@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="container-xl px-4 mt-4">
    <nav class="nav nav-borders">
        <link href="~/detailsfile/main.css" rel="stylesheet" />
        
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                
            </div>
        </div>
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="small mb-1"  >@Html.DisplayNameFor(x=>x.FullName)</label>
                            <span class="form-control" >@Html.DisplayFor(x=>x.FullName)</span>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.Email)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.Email)</span>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.Guender)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.Guender)</span>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.Country)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.Country)</span>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.City)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.City)</span>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.Age)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.Age)</span>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.BirthDate)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.BirthDate)</span>
                            </div>
                        </div>

                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.PhoneNumber)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.PhoneNumber)</span>
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1">@Html.DisplayNameFor(x=>x.Salary)</label>
                                <span class="form-control">@Html.DisplayFor(x=>x.Salary)</span>
                            </div>
                        </div>
                        <a asp-action="DisplayAllUsers" asp-controller="Home" class="btn btn-primary">Back to Home Page</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>